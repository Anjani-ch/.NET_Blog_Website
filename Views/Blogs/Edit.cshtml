@model BlogWebsite.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-1">Edit</h1>
<hr />

<form method="POST" asp-action="Edit">
    <input asp-for="Id" hidden />
    <input asp-for="CreatedAt" hidden />

    <div class="mb-3">
        <label class="form-label" asp-for="Title"></label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Content"></label>
        <textarea class="form-control" rows="7" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Save Changes" />
    </div>
</form>